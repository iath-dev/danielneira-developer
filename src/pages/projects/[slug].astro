---
// src/pages/projects/[slug].astro
import Layout from '@/layouts/Layout.astro';
import { fetchContent } from '@/services/data';

export async function getStaticPaths() {
  const projects = await fetchContent.projects();
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<Layout
  title={`Jesus Daniel Neira Lara - Fullstack/React/Python/AI - ${project.title}`}
>
  <section class="container mx-auto px-4 py-6">
    <article>
      {
        project.image && (
          <img
            src={project.image}
            alt={project.title}
            class="mb-8 h-[24rem] w-full rounded-lg object-cover"
          />
        )
      }
      <div class="mb-4">
        <h1 class="mb-4 font-mono text-2xl font-semibold">{project.title}</h1>

        <div
          class="[&_a]:badge [&_a]:badge-soft [&_a]:badge-info mb-2.5 flex gap-3.5"
        >
          {
            project.github && (
              <a href={project.github} target="_blank">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  class="size-[1em]"
                >
                  <path
                    fill="currentColor"
                    d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
                  />
                </svg>
                GitHub
              </a>
            )
          }
          {
            project.demo && (
              <a href={project.demo} target="_blank">
                Demo
              </a>
            )
          }
        </div>
        <div class="flex gap-x-3.5">
          {
            project.technologies.flatMap((tec) => (
              <span class="font-mono text-sm">{tec}</span>
            ))
          }
        </div>
      </div>

      <div class="divider"></div>

      <div
        class="[&_h1]:text-3xl [&_h2]:text-2xl [&_h3]:text-xl [&_li]:mb-2.5 [&_li>strong]:font-mono [&_li>strong]:font-semibold [&_li>strong]:tracking-tighter [&_p]:indent-3.5 [&>*]:mb-4"
        set:html={project.content}
      />
    </article>
  </section>
</Layout>
